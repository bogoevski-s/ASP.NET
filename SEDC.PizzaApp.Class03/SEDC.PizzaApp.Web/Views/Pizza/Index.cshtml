@model List<SEDC.PizzaApp.Web.Models.ViewModels.PizzaDetailsViewModel>

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        @for (int i = 0; i < Model.Count; i++)
        {
            <p>@Model[i].Name</p>
            <p>@Model[i].PizzaSize</p>
            <p>@Model[i].Price</p>
            <hr />
        }
    </div>
</div>