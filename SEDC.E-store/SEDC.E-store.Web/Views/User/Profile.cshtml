@model UserProfileViewModel

<div class="container row justify-content-center" style="margin-top: 30px; padding: 20px; border: 2px solid #a5a5a5; border-radius: 5px; ">
    <div class="row col-lg-6">
        <div class="row col-lg-6" style="margin:5px;">
            <p style="font-weight:500">UserName : <p style="margin-left:10px"> @Model.UserName</p>
        </div>
        <div class="row col-lg-6" style="margin:5px;">
            <p style="font-weight:500">Mail : <p style="margin-left:10px"> @Model.Mail</p>
        </div>
        <div class="row col-lg-6" style="margin:5px;">
            <p style="font-weight:500">ShippingAdress : <p style="margin-left:10px"> @Model.ShippingAdress</p>
        </div>
        <div class="row col-lg-6" style="margin:5px;">
            <p style="font-weight:500">City :  <p style="margin-left:10px"> @Model.City</p>
        </div>
        <div class="row col-lg-6" style="margin:5px;">
            <p style="font-weight:500">CreditCardNo :  <p style="margin-left:10px"> @Model.CreditCardNo</p>
        </div>
        <div class="row col-lg-12 flex-wrap" style="margin:5px;">
            <h6 class="col-lg-12" style="padding:0">Orders : </h6>
            @{
                @using SEDC.E_store.Domain.Models

                @foreach (Order order in Model.Orders)
                {
                    @*<p class="col-lg-12" style="margin:0; font-size:16px; font-weight:600">@comment.User.UserName :</p>*@
                    <div style="border: 1px solid #a5a5a5; border-radius:5px; margin:10px; " class="col-lg-4">
                        <p class="col-lg-12" style="margin:0; margin-bottom:5px; font-weight:500">@order.OrderedProduct.Name</p>
                        <p class="col-lg-12" style="margin:0; margin-bottom:5px;">@order.OrderedProduct.Description</p>
                        <p class="col-lg-12" style="margin:0; margin-bottom:5px">@order.Price $</p>
                    </div>
                }
            }
        </div>
        <div class="row col-lg-12 flex-wrap" style="margin:5px;">
            <h6 class="col-lg-12" style="padding:0">Total : @Model.TotalAmount $</h6>
        </div>
    </div>
    <div class="row col-lg-6">

    </div>
    <button class="btn btn-outline-info" style="margin: 5px;">
        @Html.ActionLink("Back to products", "Index", "Home", null, new { style = "text-decoration:none;" })
    </button>

</div>
